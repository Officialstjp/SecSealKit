# EditorConfig is awesome: https://EditorConfig.org
root = true

# All files
[*]
charset = utf-8
end_of_line = crlf
insert_final_newline = true
trim_trailing_whitespace = true
max_line_length = 120

# PowerShell files
[*.{ps1,psm1,psd1}]
indent_style = space
indent_size = 4

# YAML files
[*.{yml,yaml}]
indent_style = space
indent_size = 2
end_of_line = lf

# JSON files
[*.json]
indent_style = space
indent_size = 2
end_of_line = lf

# Markdown files
[*.md]
indent_style = space
indent_size = 2
trim_trailing_whitespace = false  # Markdown uses trailing spaces for line breaks

# Configuration files
[*.{config,conf,cfg}]
indent_style = space
indent_size = 4

# XML files
[*.{xml,csproj,props,targets}]
indent_style = space
indent_size = 2

# Batch and shell scripts
[*.{bat,cmd}]
end_of_line = crlf

[*.{sh,bash}]
end_of_line = lf
indent_style = space
indent_size = 2

# Ignore generated or binary files
[*.{min.js,min.css}]
insert_final_newline = ignore
trim_trailing_whitespace = ignore

# Git files
[.gitattributes]
end_of_line = lf

[.gitignore]
end_of_line = lf
